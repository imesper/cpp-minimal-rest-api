{
    "version": "0.2.0",
    "configurations": [{
        "name": "(gdb) Launch",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceRoot}/bin/debug/run_minimal-rest-api",
        "args": ["localhost:2000"],
        "stopAtEntry": false,
        "cwd": "${workspaceRoot}/bin/debug/",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [{
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
        }],
        "preLaunchTask": "make install debug"

    }]
}